{
  "name": "movie-studio",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "env-cmd": "^10.1.0"
  },
  "scripts": {
    "start": "cds run",
    "watch": "cds watch",
    "deploy": "cds deploy --to hana",
    "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-project2": "cds watch --open project2/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-sessions": "cds watch --open sessions/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "[production]": {
        "db": "hana"
      },
      "[hybrid]": {
        "db": "hana"
      },
      "destinations": true,
      "html5-repo": true,
      "workzone": true
    }
  },
  "sapux": [
    "app/project1",
    "app/project2",
    "app/sessions"
  ]
}
